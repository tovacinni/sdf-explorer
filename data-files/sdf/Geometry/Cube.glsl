#ifndef box_glsl
#define box_glsl

float sdBox( vec3 p, vec3 b )
{
    vec3 d = abs(p) - b;
    return min(max(d.x,max(d.y,d.z)),0.0) + length(max(d,0.0));
}

float sdf(vec3 p)
{
	return sdBox(p, vec3(0.5));
}

#endif
